
.index{
  padding-bottom: 25px;
  background-color: #f6f8fa;
}
// 搜索
.searchWrap{
  width: 100%;
  background-color: #ffffff;
  position: fixed;
  left: 0px;
  top: 0px;
  z-index: 99;
  padding-bottom: 10px;
}
.searchMain{
  width: 90%;
  margin: 0 auto;
  position: relative;
}
.search{
  border 1px solid #bb0307;
  border-radius: 30px;
  padding-left: 50px;
  box-sizing: border-box;
  height: 60px;
  line-height: 60px;
  font-size: 26px;
}

.container{
  display: block;
  padding-top: 80px;
}

// 每一行
.lineItem{
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #ffffff;
  width: 94%;
  margin: 10px auto;
  padding: 15px 15px 15px 0;
  box-sizing: border-box;
  box-shadow: 0 0 6px rgba(180,160,120,.8);
  // box-shadow: 6px 0 5px -5px rgba(180,160,120,.6), -6px 0 5px -5px rgba(180,160,120,.6);
}

.img{
  width: 200px;
  height: 200px;
}
.itemLeft,.itemRight{
  display: flex;
}
// 右侧文字
.itemRight{
  padding-right: 10px;
  flex-direction: column;
  flex-grow: 24;
}
.actionWrap{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 10px;
}
.title{
  font-size: 24px;
  color: #586069;
  text-align: justify;
}
.price{
  font-size: 24px;
  color: #e4393c;
  font-weight: 700;
}

.btn{
  width: 180px;
  height: 46px;
  padding: 0;
  line-height: 46px;
  background-color: #e4393c;
  font-size: 28px;
  color: #fff;
  border: none;
  outline: none;
  border-radius: 5px;
}
.btn::after{
  border: 0;
}